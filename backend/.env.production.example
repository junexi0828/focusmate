# FocusMate Production Environment Variables
# Copy this file to .env.production and fill in the values

# =============================================================================
# Application
# =============================================================================
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=info
APP_NAME=Focus Mate

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME@postgres:5432/focus_mate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=focus_mate

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://:CHANGE_ME@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# Security (CRITICAL - MUST CHANGE)
# =============================================================================
SECRET_KEY=CHANGE_ME_TO_RANDOM_64_CHARACTER_STRING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Trusted Hosts (CRITICAL - MUST CHANGE)
# =============================================================================
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# Monitoring
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PROMETHEUS_ENABLED=true

# =============================================================================
# Grafana
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
GRAFANA_ROOT_URL=https://monitoring.yourdomain.com

# =============================================================================
# Docker Image
# =============================================================================
DOCKER_IMAGE=yourdockerhubusername/focusmate-backend
IMAGE_TAG=latest

# =============================================================================
# Email (Optional)
# =============================================================================
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# OAuth (Optional)
# =============================================================================
NAVER_CLIENT_ID=YOUR_NAVER_CLIENT_ID
NAVER_CLIENT_SECRET=YOUR_NAVER_CLIENT_SECRET
NAVER_REDIRECT_URI=https://yourdomain.com/auth/naver/callback
