# .env.example - Environment Variables Template

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=info
APP_NAME=Focus Mate
APP_VERSION=1.0.0

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=4

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/focus_mate
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_EMAIL=admin@focusmate.dev
BCRYPT_ROUNDS=12

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# WebSocket
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_ROOM=50

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@focusmate.com
SMTP_FROM_NAME=Focus Mate
SMTP_USE_TLS=true

# =============================================================================
# File Storage
# =============================================================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 (optional, for production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=focusmate-uploads
AWS_S3_REGION=us-east-1

# =============================================================================
# Push Notifications
# =============================================================================
FCM_ENABLED=false
FCM_SERVER_KEY=

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

SENTRY_ENABLED=false
SENTRY_DSN=

OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_COMMUNITY_ENABLED=false
FEATURE_MESSAGING_ENABLED=false
FEATURE_STATS_ENABLED=false
FEATURE_ACHIEVEMENTS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=false

# =============================================================================
# Development
# =============================================================================
DEV_SEED_DATA=false
DEV_RESET_DB=false
