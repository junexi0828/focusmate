# Focus Mate Backend - Environment Variables Template
# Copy this file to .env and update with your values

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development                          # development, staging, production
APP_DEBUG=true                               # Enable debug mode
APP_LOG_LEVEL=debug                          # debug, info, warning, error, critical
APP_NAME="Focus Mate"
APP_VERSION=1.0.0

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true                                  # Auto-reload on code changes (dev only)
WORKERS=4                                    # Number of worker processes (production)

# =============================================================================
# Database
# =============================================================================
# SQLite (Development)
DATABASE_URL=sqlite+aiosqlite:///./focus_mate.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/focus_mate
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=10
# DATABASE_ECHO=false                        # Log SQL queries

# =============================================================================
# Redis (Caching & Pub/Sub)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# WebSocket
# =============================================================================
WS_HEARTBEAT_INTERVAL=30                     # Ping interval in seconds
WS_MAX_CONNECTIONS_PER_ROOM=50

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@focusmate.com
SMTP_FROM_NAME="Focus Mate"
SMTP_USE_TLS=true

# =============================================================================
# File Storage
# =============================================================================
STORAGE_TYPE=local                           # local, s3
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760               # 10MB in bytes

# AWS S3 (if STORAGE_TYPE=s3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=focus-mate-uploads
# AWS_S3_REGION=us-east-1

# =============================================================================
# Push Notifications (FCM for Mobile)
# =============================================================================
FCM_ENABLED=false
FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# Monitoring & Observability
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

SENTRY_ENABLED=false
# SENTRY_DSN=https://your-sentry-dsn

# OpenTelemetry
OTEL_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_COMMUNITY_ENABLED=false              # Enable community features
FEATURE_MESSAGING_ENABLED=false              # Enable 1:1 messaging
FEATURE_STATS_ENABLED=false                  # Enable statistics
FEATURE_ACHIEVEMENTS_ENABLED=false           # Enable achievements
FEATURE_NOTIFICATIONS_ENABLED=false          # Enable notifications

# =============================================================================
# Development Tools
# =============================================================================
DEV_SEED_DATA=false                          # Seed database with test data on startup
DEV_RESET_DB=false                           # Reset database on startup (DANGER!)
