# .env.example - Environment Variables Template

# =============================================================================
# Application
# =============================================================================
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=info
APP_NAME=Focus Mate
APP_VERSION=1.0.0

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=4

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/focus_mate
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# =============================================================================
# Security
# =============================================================================
# SECRET_KEY: Generate a secure random key (minimum 32 characters)
# You can generate one using: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# For development, you can use the default below, but MUST change for production
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars-please-generate-secure-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_EMAIL=admin@focusmate.dev
BCRYPT_ROUNDS=12

# File Encryption (optional - if not set, derives from SECRET_KEY)
# FILE_ENCRYPTION_KEY=your-base64-encoded-fernet-key

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
# Add your production domain and ngrok URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,https://eieconcierge.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# WebSocket
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS_PER_ROOM=50

# =============================================================================
# Presence (Online Status)
# =============================================================================
PRESENCE_TIMEOUT_MINUTES=5
PRESENCE_CLEANUP_INTERVAL_MINUTES=5

# =============================================================================
# Invitation Codes
# =============================================================================
INVITATION_CODE_LENGTH=8
INVITATION_DEFAULT_EXPIRY_HOURS=24

# =============================================================================
# Legacy Messaging Migration
# =============================================================================
ENABLE_LEGACY_MESSAGING=false
LEGACY_MIGRATION_BATCH_SIZE=100

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@focusmate.com
SMTP_FROM_NAME=Focus Mate
SMTP_USE_TLS=true

# =============================================================================
# File Storage
# =============================================================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 (optional, for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# =============================================================================
# Push Notifications (FCM for Mobile)
# =============================================================================
FCM_ENABLED=false
FCM_SERVER_KEY=

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

SENTRY_ENABLED=false
SENTRY_DSN=

OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_COMMUNITY_ENABLED=false
FEATURE_MESSAGING_ENABLED=false
FEATURE_STATS_ENABLED=false
FEATURE_ACHIEVEMENTS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=false

# =============================================================================
# OAuth (Social Login)
# =============================================================================
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:3000/auth/naver/callback

# =============================================================================
# Development
# =============================================================================
DEV_SEED_DATA=false
DEV_RESET_DB=false
